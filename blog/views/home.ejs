<%- include('header') -%>

<div class="container">
<div class="firstElement">
    <center><h2 class="living-title">Bienvenue sur notre blog</h2></center>
   </div>
</div>
<h3 class="list-articles">Nos articles</h3>
<div class="articles">
    
    <!-- Boucle pour afficher tous les articles -->
    <%  for (const article of articles) { %>
    <div class="article-home" id="articleblock" onmouseover="colorOn" style="background-image: url(../images/<%= article.image %>)" onmouseout="colorOff">
      <div class="article-home-h">  <a href="/article/<%= article.id %>"><h2 class="titre living-title"><%= article.titre %></h2></a>
       
      
        <p><%= article.description.substr(0,100) %></p>
        <p><%= article.date.toLocaleDateString("fr") %></p>
        
      <% if (locals.isConnected != undefined) {%>
        <div class="btnad"> <a href="/articleUpdate/<%= article.id %>" class="update">Update</a>
        <a href="/articleDelete/<%= article.id %>" class="delete">Delete</a></div> 
        <% } %>
        
</div>
    </div>
    <% } %>
   
    
</div>

<%- include('footer') -%>